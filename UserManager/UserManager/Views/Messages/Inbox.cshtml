@model PaginationMessageModel<InboxMessageModel>
@{
    ViewData["Title"] = "Inbox";
    Layout = "_Layout";
}
<html lang="en">
<body>
    <div class="container">
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Topic</th>
                    <th scope="col">Sender's email</th>
                    <th scope="col">Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.MessageModels.Count; i++)
                {
                    <tr>
                        <th scope="row">@((Model.CurrentPage - 1) * 10 + 1 + i)</th>
                        <td>
                            <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop@(i)" value="@Model.MessageModels[i].MessageId" onclick="readed(this.value)">
                                @Model.MessageModels[i].MessageTopic
                            </button>
                            <div class="modal fade" id="staticBackdrop@(i)" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">@Model.MessageModels[i].MessageTopic</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                        </div>
                                        <div class="modal-body">
                                            @Model.MessageModels[i].MessageText
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>@Model.MessageModels[i].SenderEmail</td>
                        <td>@Model.MessageModels[i].Date.ToShortDateString()</td>
                        @if (Model.MessageModels[i].Readed)
                        {
                            <td><img src="~/img/readed.png" width="25" height="25"></td>
                        }
                        else
                        {
                            <td><img src="~/img/not readed.png" width="25" height="25" id="image"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="getusers" asp-controller="users" asp-route-currentPage="@(Model.CurrentPage - 1)" aria-disabled="true">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="getusers" asp-controller="users" asp-route-currentPage="@(Model.CurrentPage - 1)" aria-disabled="true">Previous</a>
                </li>
            }
            @for (int i = 0; i < Model.CountOfPages; i++)
            {
                <li class="page-item"><a class="page-link" asp-action="getusers" asp-controller="users" asp-route-currentPage="@(i + 1)">@(i + 1) </a></li>
            }
            @if (Model.CurrentPage == Model.CountOfPages || Model.CountOfPages == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="getusers" asp-controller="users" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="getusers" asp-controller="users" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
    <script src="~/js/message.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
